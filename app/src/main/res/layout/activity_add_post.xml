<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.gusti_r7i22ff.gustianandarespati_1202140033_modul6.AddPostActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Img_post"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_background"/>

        <Button
            android:id="@+id/Btn_Choose_Image"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/img_post"
            android:text="Choose File"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/Et_title_post"
                android:hint="Title"
                android:layout_below="@id/Btn_Choose_Image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <EditText
                android:id="@+id/Et_post"
                android:hint="Write Your Post ..."
                android:layout_below="@id/Et_title_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


        <Button
            android:onClick="Add"
            android:id="@+id/Btn_Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Et_post"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Add Post"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>